@model Movies.Entities.Movie

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="actions-bar">
    @Html.ActionLink("Back to List", "Index")
</p>

<div class="movie-details-wrapper">
    <div class="movie-details-title-column">
        <h2>@Model.Title</h2>

        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img style="width: 200px" src="@Model.ImageUrl" title="@Model.Title"/>
        }
    </div>
    <div class="movie-details-content-column">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProductionYear)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductionYear)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price) USD
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
</div>
