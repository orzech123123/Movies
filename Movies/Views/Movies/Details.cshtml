@using Movies.Helpers
@model Movies.Entities.Movie

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="actions-bar">
    <a href="@Url.ActionRedirectToReferrer(Request)">Back to list</a>
</div>

<div class="row">
    <div class="col-sm-3">
        <h2>@Model.Title</h2>

        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img style="width: 200px" src="@Model.ImageUrl" title="@Model.Title"/>
        }
    </div>
    <div class="col-sm-9">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProductionYear)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductionYear)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Model.Price.ToString("F2") USD
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
</div>
